{
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "packages": [
    "packages/firebase/*",
    "packages/tooling/*",
    "tests"
  ],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "*-template-*"
    }
  },
  "version": "0.0.0"
}
