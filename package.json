{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "yarn run lerna:boostrap",
    "lerna:boostrap": "lerna bootstrap",
    "link:packages": "lerna link && lerna exec -- yarn link",
    "tooling:start-test-api": "node packages/tooling/test-api",
    "tooling:build-docker-image:debug": "cd packages/tooling/test-android-docker && npm run build:debug",
    "tooling:build-docker-image:release": "cd packages/tooling/test-android-docker && npm run build:release",
    "tooling:publish-docker-image:debug": "cd packages/tooling/test-android-docker && npm run publish:debug",
    "tooling:publish-docker-image:release": "cd packages/tooling/test-android-docker && npm run publish:release"
  },
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "16.6.3",
    "react-native": "0.58.0-rc.2"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "lerna": "^3.6.0",
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "@invertase/babel-preset-react-native-syntax": "^0.1.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.87.0",
    "flow-copy-source": "^2.0.2",
    "genversion": "^2.1.0",
    "prettier": "^1.15.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/firebase/*",
    "packages/tooling/*",
    "tests"
  ]
}
