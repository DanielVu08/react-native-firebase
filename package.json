{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "yarn run lerna:boostrap",
    "lerna:boostrap": "lerna bootstrap",
    "lerna:link": "lerna link && lerna exec -- yarn link",
    "tests:packager:chrome": "react-native start --platforms ios,android",
    "tests:packager:jet": "REACT_DEBUGGER='echo nope' react-native start",
    "tests:packager:jet-reset-cache": "REACT_DEBUGGER='echo nope' react-native start --reset-cache",
    "tests:android:build": "cd tests && detox build --configuration android.emu.debug",
    "tests:android:test": "cd tests && detox test --configuration android.emu.debug",
    "tests:android:test-reuse": "cd tests && detox test --configuration android.emu.debug --reuse",
    "tests:android:test-cover": "cd tests && nyc detox test --configuration android.emu.debug",
    "tests:android:test-cover-reuse": "cd tests && nyc detox test --configuration android.emu.debug --reuse",
    "tests:ios:build": "cd tests && detox build --configuration ios.sim.debug",
    "tests:ios:build-release": "cd tests && detox build --configuration ios.sim.release",
    "tests:ios:test": "cd tests && detox test --configuration ios.sim.debug --loglevel warn",
    "tests:ios:test-reuse": "cd tests && detox test --configuration ios.sim.debug --reuse --loglevel warn",
    "tests:ios:test-cover": "cd tests && nyc detox test --configuration ios.sim.debug",
    "tests:ios:test-cover-reuse": "cd tests && nyc detox test --configuration ios.sim.debug --reuse --loglevel warn",
    "tests:ios:pod:install": "cd tests && cd ios && rm -rf ReactNativeFirebaseDemo.xcworkspace && pod install && cd ..",
    "tooling:start-test-api": "node packages/tooling/test-api",
    "tooling:build-docker-image:debug": "cd packages/tooling/test-android-docker && npm run build:debug",
    "tooling:build-docker-image:release": "cd packages/tooling/test-android-docker && npm run build:release",
    "tooling:publish-docker-image:debug": "cd packages/tooling/test-android-docker && npm run publish:debug",
    "tooling:publish-docker-image:release": "cd packages/tooling/test-android-docker && npm run publish:release"
  },
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-native": "^0.58.0-rc.2"
  },
  "devDependencies": {
    "rimraf": "^2.6.2",
    "lerna": "^3.6.0",
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@invertase/babel-preset-react-native-syntax": "^0.1.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.87.0",
    "flow-copy-source": "^2.0.2",
    "genversion": "^2.1.0",
    "prettier": "^1.15.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/firebase/*",
    "packages/tooling/*",
    "tests"
  ]
}
